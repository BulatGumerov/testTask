@model IEnumerable<Documents.Models.Document>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            ReleaseDate
        </th>
        <th>
            Author
        </th>
        <th>
            Tags
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @foreach (var tag in item.Tags) 
            {
                @Html.DisplayFor(modelItem => tag)
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { documentName=item.ReleaseDate }) |
            @Html.ActionLink("Details", "Details", new { documentName=item.ReleaseDate }) |
            @Html.ActionLink("Delete", "Delete", new { documentName = item.ReleaseDate})
        </td>
    </tr>
}

</table>
