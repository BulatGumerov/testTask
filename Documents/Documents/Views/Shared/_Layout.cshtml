@{
    var X = Html.X();

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Controllers/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>
<body>
@*    @RenderSection("example", false)*@
    @Html.X().ResourceManager()
    <div class="page">
        <header>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>

        </header>

    </div>

    @(X.Panel()
    .Region(Region.North)
    .LayoutConfig(new HBoxLayoutConfig { Align = HBoxAlign.Stretch })
    .Layout(LayoutType.HBox)
    .Height(150)
    .Items(
        X.Panel()
        .Flex(1)
        .Items(
            X.Button()
            .Text("Index")
            .DirectClickAction("IndexAction", "Overview"),
            X.Button()
            .Text("Create")
            .DirectClickAction("CreateAction", "Overview"),
             X.Button()
            .Text("Search")
            .DirectClickAction("SearchIndexAction", "Overview"),
            X.Button()
            .Text("DocumentsMVC3")
            .DirectClickAction("IndexAction", "Documents")
            )
 )
)
    @RenderBody()
</body>
</html>
